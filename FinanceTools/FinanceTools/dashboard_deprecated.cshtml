@functions{
    DateTime LastDayOfMonth(DateTime dat){
        DateTime ret =new DateTime(dat.Year,dat.Month,1).AddMonths(1).AddDays(-1);      
        return ret;
    }
    DateTime FirstDayOfMonth(DateTime dat){
        DateTime ret = new DateTime(dat.Year, dat.Month,1);
        return ret;
    }
}

