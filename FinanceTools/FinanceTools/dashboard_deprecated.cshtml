                                    $(this).removeClass();
                                    $(this).addClass('unselected');
                                });
                               $(this).removeClass('unselected');
                               $(this).addClass('selected');
                               pieRefresh(targ,this.attributes.chart.value);
                           }
                        });
                    $(this).mouseover(
                        function () {
                            if (!$(this).hasClass('selected')) {
                                $(this).removeClass('unselected');
                                $(this).addClass('moused');
                            }
                        }
                    );
                    $(this).mouseout(
